
@{
    ViewBag.Title = "审核组织";
    Layout = "~/Views/Shared/_LayoutCASAdmin.cshtml";
}

<h2>审核组织</h2>

显示组织详情：
<ol>
    <li>学生组织名称</li>
    <li>学生组织性质</li>
    <li>负责人及联系方式</li>
    <li>等等...</li>
</ol>

<br />
@using (Html.BeginForm("OrgAuditPass", "Admin", new { id = 2 }, FormMethod.Post, new { id= "auditForm" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>不通过原因</label>
        <textarea name="reason" class="form-control" rows="2"></textarea>
    </div>
    <button type="submit" class="btn btn-success">通过</button>
    <button type="submit" onclick="javascript:$('#auditForm').attr('action','@Url.Action("OrgAuditNotPass", "Admin", new { id = 2 })')" class="btn btn-danger">不通过</button>
}
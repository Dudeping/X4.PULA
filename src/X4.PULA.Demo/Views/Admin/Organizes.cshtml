
@{
    ViewBag.Title = "查看组织";
    Layout = "~/Views/Shared/_LayoutCASAdmin.cshtml";
}

<h2>
    查看组织
    @using (Html.BeginForm("SearchOrgs", "Admin", FormMethod.Post, new { @class = "bs-example bs-example-form pull-right form-inline" }))
    {
        @Html.AntiForgeryToken()
        <div class="input-group">
            <input type="text" id="searchOrg" class="form-control" placeholder="本校组织" name="searchStr">

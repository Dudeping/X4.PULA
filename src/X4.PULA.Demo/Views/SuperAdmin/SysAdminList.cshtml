                        <a class="btn-xs text-danger" href="javascript:document.getElementById('delx40002').submit()" title="点击删除该系统管理员x40002"><i class="glyphicon glyphicon-trash" aria-label="删除" aria-hidden="true"></i></a>
                    }
                </td>
            </tr>
            <tr>
                <td>3</td>
                <td>x40003</td>
                <td>...</td>
                <td>
                    @using (Html.BeginForm("DelSysAdmin", "SuperAdmin", new { id = 3 }, FormMethod.Post, new { id = "delx40003" }))
                    {
                        @Html.AntiForgeryToken()

                        <a class="btn-xs text-danger" href="javascript:document.getElementById('delx40003').submit()" title="点击删除该系统管理员x40003"><i class="glyphicon glyphicon-trash" aria-label="删除" aria-hidden="true"></i></a>
                    }
                </td>
            </tr>
        </table>
    </div>
    <div class="panel-footer" style="background-color:white">

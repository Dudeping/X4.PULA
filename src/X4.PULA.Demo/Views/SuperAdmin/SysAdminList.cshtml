    <div style="margin:0 10px">
        <table class="table table-hover" style="margin:0">
            <tr>
                <th>#</th>
                <th>账号</th>
                <th>未确认的列</th>
                <th>删除</th>
            </tr>
            <tr>
                <td>1</td>
                <td>x40001</td>
                <td>...</td>
                <td>
                    @using (Html.BeginForm("DelSysAdmin", "SuperAdmin", new { id = 1 }, FormMethod.Post, new { id = "delx40001" }))
                    {
                        @Html.AntiForgeryToken()

                        <a class="btn-xs text-danger" href="javascript:document.getElementById('delx40001').submit()" title="点击删除该系统管理员x40001"><i class="glyphicon glyphicon-trash" aria-label="删除" aria-hidden="true"></i></a>
                    }
                </td>
            </tr>
            <tr>
                <td>2</td>
                <td>x40002</td>
                <td>...</td>

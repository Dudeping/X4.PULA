
@{
    ViewBag.Title = "管理系统管理员";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<h2>管理系统管理员 @Html.ActionLink("添加", "AddSysAdmin", null, new { @class = "btn btn-success btn-xs" })</h2>

<div class="panel panel-default">

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 普拉网</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("普拉网", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("我的主页", "X4LoginRedirect", "Account", null, new { title = "个人中心" })</li>
                    @if (X4Env.LoginInfo.IsInRole(X4Env.X4Roles.CampusAdmin))
                    {
                        <li>@Html.ActionLink("学校管理", "Schools", "Admin")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">审核管理 <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("组织审核", "AuditOrgs", "Admin")</li>
                                <li>@Html.ActionLink("活动审核", "AuditActs", "Admin")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("活动管理", "NoSubmitActs", "Admin")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("校园大使", "CampusAdmins", "Admin")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">审核管理 <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("学校审核", "AuditSchs", "Admin")</li>
                                <li>@Html.ActionLink("企业审核", "AuditCpys", "Admin")</li>
                                <li>@Html.ActionLink("确认组织", "ComfirmOrgs", "Admin")</li>
                                <li>@Html.ActionLink("申请查看", "AuditShows", "Admin")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("企业管理", "Companies", "Admin")</li>
                        <li>@Html.ActionLink("学校管理", "Schools", "Admin")</li>
                    }
                    <li>@Html.ActionLink("赞助记录", "Index", "Logs")</li>
                    <li>@Html.ActionLink("系统消息", "Index", "Letters")</li>
                </ul>

                @Html.Partial("_PartialAccount")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 普拉网</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
